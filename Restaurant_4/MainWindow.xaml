<Window x:Class="Restaurant_4.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="My Restaurant" Height="450" Width="350" MinHeight="300" MinWidth="200">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Customer Order -->
        <GroupBox Header="Customer Order" Grid.Row="0" Padding="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Chicken:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtChicken" Width="50" Margin="10,0,0,0" Text="0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Eggs:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEgg" Width="50" Margin="10,0,0,0" Text="0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Drink:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cmbDrink" Width="100" Margin="10,0,0,0" SelectedIndex="1" SelectedValuePath="Content">
                        <ComboBoxItem Content="NoDrink"/>
                        <ComboBoxItem Content="Tea"/>
                        <ComboBoxItem Content="Coffee"/>
                        <ComboBoxItem Content="Water"/>
                        <ComboBoxItem Content="Cola"/>
                        <ComboBoxItem Content="Milk"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <!-- Buttons -->
        <StackPanel Grid.Row="1"
            Orientation="Horizontal"
            Margin="0,10,0,0">

            <Button x:Name="btnReceiveRequest"
            Content="Receive request from:"
            Height="20"
            Padding="10,0"
            Click="BtnReceiveRequest_Click"/>

            <TextBox x:Name="txtCustomerName"
             Width="100"
             Height="20"
             Margin="10,0,0,0"
             Text=""/>
        </StackPanel>
        <Button x:Name="btnSendToCook" Content="Send Orders to Cook" Grid.Row="2" Margin="0,5,0,0" Height="20" Click="BtnSendToCook_Click"/>
        <TextBlock x:Name="txtEggQuality" Text="" Grid.Row="3" Margin="0,5,0,0" FontSize="14"/>
        <Button x:Name="btnServeFood" Content="Serve Food to Customers" Grid.Row="4" Margin="0,10,0,0" Height="20" Click="BtnServeFood_Click"/>
        <!-- Results -->
        <GroupBox Header="Results" Grid.Row="5" Margin="0,10,0,0">
            <TextBox x:Name="txtResults" IsReadOnly="True" AcceptsReturn="True" Height="140"/>
        </GroupBox>
    </Grid>
</Window>